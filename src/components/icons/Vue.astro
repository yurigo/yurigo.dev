---
const { size = 24 } = Astro.props;
const colorfull = Astro.props.colorfull || false;
---

<svg
  xmlns="http://www.w3.org/2000/svg"
  width={size}
  height={size}
  viewBox="0 0 24 24"
  fill="none"
  stroke="currentColor"
  stroke-width="2"
  stroke-linecap="round"
  stroke-linejoin="round"
  class="icon icon-tabler icons-tabler-outline icon-tabler-brand-vue"
>
  <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
  <path
    stroke={colorfull ? "#35495e" : "currentColor"}
    d="M16.5 4l-4.5 8l-4.5 -8"></path>
  <path stroke={colorfull ? "#42b883" : "currentColor"} d="M3 4l9 16l9 -16"
  ></path>
</svg>
