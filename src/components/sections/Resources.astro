<style>
  @reference "../../styles/global.css";

  ul {
    list-style: none; /* Oculta el marker nativo */
    padding-left: 0;
  }

  li {
    display: flex;
    align-items: center; /* Centra verticalmente el icono y el texto */
    gap: 0.5rem;
    position: relative;
  }

  li::before {
    content: "";
    display: inline-block;
    width: 2rem;
    height: 2rem;
    background-image: url("/img/space-invader.svg");
    background-size: contain;
    background-repeat: no-repeat;
    background-position: center;
    flex-shrink: 0;
    margin-right: 0.5rem;

    filter: drop-shadow(1px 1px 0px rgb(0, 0, 0))
      drop-shadow(-1px -1px 0px rgb(0, 0, 0))
      drop-shadow(-1px 1px 0px rgb(0, 0, 0))
      drop-shadow(1px -1px 0px rgb(0, 0, 0))
      drop-shadow(5px 5px 0 rgba(0, 0, 0, 0.3));
  }

  li a {
    @apply inline-block align-middle p-2;
  }
</style>
